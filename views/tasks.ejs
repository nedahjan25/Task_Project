      <li><a href="/login">Logout</a></li>
    </ul>
  </nav>
</div>

  <h3>Create New Task</h3>
  <form action="/tasks" method="post">
    <label for="task-title">Title:</label>
    <input type="text" id="task-title" name="title" required>
    <br>
    <label for="task-description">Description:</label>
    <textarea id="task-description" name="description" required></textarea>
    <br>
    <label for="task-due-date">Due Date:</label>
    <input type="date" id="task-due-date" name="dueDate" required>
    <br>
    <label for="task-priority">Priority:</label>
    <select id="task-priority" name="priority" required>
      <option value="low">Low</option>
      <option value="medium">Medium</option>
      <option value="high">High</option>
    </select>
    <br>
    <label for="task-completed">Completed:</label>
    <input type="checkbox" id="task-completed" name="completed">
    <br>
    <button type="submit">Create Task</button>
  </form>



  <a href="/">Back to Login</a>
</body>
</html>
